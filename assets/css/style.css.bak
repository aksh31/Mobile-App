/* ============================================Heroimg Section Starts============================================ */
.heroimg
{
	background-image:linear-gradient(rgb(218, 45, 51, 0.5), rgb(218, 45, 51, 0.5)), url("../images/heroimg.jpg") ;
	background-size:cover;
	background-attachment:fixed;
	background-repeat:no-repeat;
	padding:47px 0 66px;
	overflow-y: hidden;
}
.logo
{
	cursor:pointer;
}
.navbar li
{
	display:inline-block;
	margin-left:20px;
}
.navbar li a
{
	display:inline-block;
	font-size:16px;
	font-weight:bold;
	color:#fff;
	padding:10px;
	text-transform:uppercase;
	position:relative;
}
.navbar li a::after
{
	content:'';
	width:0;
	height:4px;
	background-color:#fff;
	bottom:0;
	left:0;
	position:absolute;
	transition:all 0.5s ease-in-out;
}
.navbar li a:hover::after
{
	width:100%;
}
.hero-info h2, .features h2, .joker-info h2
{
	font-size:52px;
	color:#fff;
	text-transform:uppercase;
}
.hero-info p
{
	font-size:36px;
	color:#fff;
	font-weight:300;
}
.hero-info a
{
	background-color:#282828;
	border-radius:50px;
	padding:10px 52px 10px 36px;
	font-size:17px;
	color:#fff;
	text-transform:uppercase;
	transition: all 0.5s ease-in-out;
	border:2px solid #282828;
}
.hero-info a i
{
	font-size:46px;
	margin-right:20px;
	vertical-align:middle;
}
.hero-info a:hover
{
	background-color:#fff;
	color:#282828;
}
.hero-info
{
	position:relative;
}
.hero-info img
{
	position:absolute;
	right:0;
}
/* ============================================Features Section Starts============================================ */
.features
{
	padding:89px 0 108px;
}
.features h2
{
	color:#8a8a8a;
}
.features p
{
	font-size:22px;
	line-height:30px;
	color:#3a3a3a;
}
.thumb-info h4
{
	font-size:24px;
	color:#1a1a1a;
	text-transform:uppercase;
}
.thumb-info p
{
	font-size:18px;
	color:#646464;
}
/* ============================================Joker Section Starts============================================ */
.joker
{
	background-color:#d7dedc;
	background-image:url('../images/joker.png');
	background-size:cover;
	background-position:center;
	background-repeat:no-repeat;
	padding:198px 0 172px;
}
.joker-info span
{
	color:#f55150;
}
.joker-info p
{
	font-size:24px;
	color:#585858;
	line-height:32px;
	font-weight:300;
}
.joker-info a
{
	background-color:#d9332d;
	border:2px solid #d9332d;
	font-size:15px;
	font-weight:bold;
	color:#fff;
	padding:18px 24px;
	border-radius:50px;
	text-transform:uppercase;
	transition: all 0.5s ease-in-out;
}
.joker-info a:hover
{
	color:#d9332d;
	background-color:#fff;
}
/* ============================================Footer Row1 Section Starts============================================ */
.foot-row1
{
	padding:121px 0 151px;
	background-color:#2e2e38;
}
.foot-info h4
{
	font-size:20px;
	color:#fff;
}
.orange
{
	width:55px;
	height:42px;
	background-color:#e74c3c;
	cursor:pointer;
}
.orange:hover
{
	background-color:#fff;
	border:2px solid #e74c3c;
	transition:all 0.5s ease-in-out;
}
.heading a
{
	font-size:15px;
	font-weight:bold;
	color:#fff;
	display:block;
}
.heading p
{
	font-size:11px;
	/* font-weight:bold; */
	color:#fff;
}
.foot-info p
{
	font-size:15px;
	color:#fff;
	font-style:italic;
	line-height:23px;
	padding-right:50px;
}
/* ============================================Footer Row2 Section Starts============================================ */
.foot-row2
{
	background-color:#d7dedc;
	padding:41px 0;
}
.copyri8 a
{
	font-size:25px;
	color:#000;
	padding:0 25px;
	border-right:2px solid #000;
}
.social-icons a
{
	font-size:30px;
	color:#4762a1;
	margin-right:40px;
}
.social-icons a:nth-child(2) i
{
	color:#d83878;
}
.social-icons a:last-child i
{
	font-size:24px;
	color:#2b689a;
	background-color:#a5e8ea;
	width:30px;
	height:30px;
	padding:5px;
	border-radius: 5px;
}